{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",     // This finds all TypeScript files in the project
    "**/*.d.ts"     // This finds all TypeScript declaration files
  ],
  "exclude": ["node_modules", "dist","client","contentGeneration"] // Exclude node_modules and the output directory
}